
@model ALlyHub.Models.Project

@{
    ViewBag.Title = "PostJobs";
    ViewBag.Subtitle = "Post Your Job Details";
}
<link rel="stylesheet" href="~/Content/Login.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/MaterialDesign-Webfont/7.2.96/css/materialdesignicons.min.css" integrity="sha512-LX0YV/MWBEn2dwXCYgQHrpa9HJkwB+S+bnBpifSOTO1No27TqNMKYoAn6ff2FBh03THAzAiiCwQ+aPX+/Qt/Ow==" crossorigin="anonymous" referrerpolicy="no-referrer" />


<h2 class="title text-center" style="margin-top:50px;margin-bottom:30px">Post a Project</h2>

@using (Html.BeginForm("PostJobs", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()
<div class="row g-3">
    <div class="col-12 col-sm-6">
        @Html.Label("Title", new { @class = "form-label" })
        @Html.TextBoxFor(m => m.ProjectTitle, new { @class = "form-control", placeholder = "Project Title" })
    </div>
    <div class="col-12 col-sm-6">
        @Html.Label("Sub Title", new { @class = "form-label" })
        @Html.TextBoxFor(m => m.ShortDescription, new { @class = "form-control", placeholder = "Sub Title", type = "email" })
    </div>
    <div class="col-12 col-sm-6">
        @Html.Label("Payment", new { @class = "form-label" })
        @Html.TextBoxFor(m => m.PaymentAmount, new { @class = "form-control", placeholder = "Payment" })
    </div>
    <div class="col-12 col-sm-6">
        @Html.Label("Expertise Level", new { @class = "form-label" })
        @Html.TextBoxFor(m => m.ExpertiseLevel, new { @class = "form-control", placeholder = "Expertise Level" })
    </div>
    <div class="col-12 col-sm-6">
        @Html.Label("Project Duration", new { @class = "form-label" })
        @Html.TextBoxFor(m => m.Duration, new { @class = "form-control", rows = 5, placeholder = "Project Duration" })
    </div>
    <div class="col-12 col-sm-6">
        @Html.Label("Required Skills", new { @class = "form-label" })
        @Html.TextBoxFor(m => m.SkillSet, new { @class = "form-control", rows = 5, placeholder = "Skills" })
    </div>
    <div class="col-12 col-sm-6">
        @Html.Label("Job Type", new { @class = "form-label" })
        @Html.TextBoxFor(m => m.JobNature, new { @class = "form-control", rows = 5, placeholder = "Job Type" })
    </div>
    <div class="col-12 col-sm-6">
        @Html.Label("Location", new { @class = "form-label" })
        @Html.TextBoxFor(m => m.JobLocation, new { @class = "form-control", rows = 5, placeholder = "Location" })
    </div>
    <div class="col-12">
        @Html.Label("Description", new { @class = "form-label" })
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 5, placeholder = "Description" })
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-lg rounded-0 fs-6 logBtn" style="width:100%;margin-top:20px;margin-bottom:30px">Post Project</button>
    </div>
</div>

}

