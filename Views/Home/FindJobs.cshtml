@{
    ViewBag.Title = "FindJobs";
    ViewBag.Subtitle = "Find Your Desired Jobs";
}
@model IEnumerable<ALlyHub.Models.Project>
<link rel="stylesheet" href="~/Content/FindProjects.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<section class="post-area section-gap">
    <div class="container">
        <div class="row d-flex">
            <div class="col-lg-8 post-list">
                @foreach (var project in Model)
                {
                    <div class="single-post">
                        <div class="details">
                            <div class="title d-flex flex-row justify-content-between">
                                <div class="titles">
                                    <a href="@Url.Action("ProjectDetails", "Home", new { projectId = project.ProjectID })"><h4>@project.ProjectTitle</h4></a>
                                    <h6>Posted On : @project.PostedOn</h6>
                                    <h5>@project.CompanyName</h5>
                                </div>
                            </div>
                            <p>
                                @project.ShortDescription <!-- Display project description -->
                            </p>
                            <h5>Job Nature: Full time</h5>
                            <div class="details2">
                                <p class="address" style="margin-right:20px;"><i class="fa-solid fa-location-dot"></i> Your Address</p>
                                <p class="address"><i class="fa-regular fa-money-bill-1"></i> @project.PaymentAmount</p>
                            </div>
                            <!-- Display payment amount -->
                        </div>
                        <h6>Required Skills</h6>
                        <div class="thumb">
                            <div>
                                <ul class="tags">
                                    <li>
                                        <a href="#">@project.SkillSet</a> <!-- Example tag based on SkillSet field -->
                                    </li>
                                    <!-- Add more tags as needed -->
                                </ul>
                            </div>
                            <div>
                                <!----  <a href="@Url.Action("ProjectDetails", "Home", new { projectId = project.ProjectID })" class="btns">Apply</a> -->
