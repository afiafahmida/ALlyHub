
@{
    ViewBag.Title = "EnterOtp";
}
@model ALlyHub.Models.ProfileModel
<link rel="stylesheet" href="~/Content/ForgotPassword.css" />
<div class="row forgotRow">

    <h1>Enter OTP</h1>
    <h6 class="information-text">Enter your OTP from Email</h6>
    @using (Html.BeginForm("VerifyOtp", "Home", FormMethod.Post))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.UserOtp, "OTP")
            @Html.TextBoxFor(m => m.UserOtp, new { @class = "form-control", placeholder = "Enter OTP", @id = "otp" })
            <button type="submit" class="btn btn-primary">Verify OTP</button>
        </div>
    }
